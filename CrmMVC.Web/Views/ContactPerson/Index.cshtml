@model IEnumerable<CrmMVC.Application.ViewModels.ContactPerson.ContactPersonVm>

@{
    ViewData["Title"] = "OSOBY KONTAKTOWE";
}

<h1>OSOBY KONTAKTOWE</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefon
            </th>
            <th>
                Stanowisko
            </th>
            <th>
                Firma
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
                @Html.ActionLink("Usuwanie", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
