@model CrmMVC.Application.ViewModels.Company.CompanyVm

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>FIRMY</h1>

<div>
    <h4>Szczegóły</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Województwo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voivodeship)
        </dd>
        <dt class = "col-sm-2">
            Miejscowość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            Typ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyType)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edycja", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Usuwanie", "Delete", new { id = Model.Id }) |
    <a asp-action="Index">Powrót</a>
</div>
<br />
<h5>Osoby</h5>
@Html.ActionLink("+ Nowa osoba", "Create", "ContactPerson" , new { companyId = Model.Id }) 
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefon
            </th>
            <th>
                Stanowisko
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContactPeople)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    @Html.ActionLink("Edycja", "Edit", "ContactPerson", new { id=item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", "ContactPerson", new { id = item.Id }) |
                    @Html.ActionLink("Usuwanie", "Delete", "ContactPerson", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
