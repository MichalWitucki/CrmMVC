@model CrmMVC.Application.ViewModels.Company.CompanyVm

<h3>Usuwanie firmy</h3>
<div>
    <h4>Czy na pewno usunąć ?</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voivodeship)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyType)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
