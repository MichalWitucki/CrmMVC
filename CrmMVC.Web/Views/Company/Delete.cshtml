@model CrmMVC.Application.ViewModels.Company.CompanyVm

<h3>Usuwanie firmy</h3>
<div>
    <h4>Czy na pewno usunąć firmę?</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voivodeship)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyType)
        </dd>
    </dl>
    @if (@Model.ContactPeople.Count > 0) 
    {
    <div class="alert alert-danger" role="alert">
        Uwaga, w firmie dodane są osoby: (@Model.ContactPeople.Count). <br/> 
        Wszystkie osoby zostaną usunięte razem z firmą.
    </div>
    }

    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.Id">Powrót do firmy</a> |
        <a asp-action="Index">Powrót do listy firm</a>

    </form>
</div>
